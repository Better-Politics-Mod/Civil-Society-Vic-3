			blockoverride "onclick_showmore" {
				visible = "[Not(GetVariableSystem.Exists('ciso_society_potential_civinsts_show'))]"
			}

			blockoverride "onclick_showless" {
				visible = "[GetVariableSystem.Exists('ciso_society_potential_civinsts_show')]"
			}
		}
		flowcontainer = {
            direction = vertical
			layoutpolicy_horizontal = expanding
			spacing = 5
