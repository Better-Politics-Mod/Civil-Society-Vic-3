            direction = vertical
			layoutpolicy_horizontal = expanding
			spacing = 5

			margin = { 15 0 }

			datamodel = "[State.MakeScope.GetList('ciso_civil_institutions')]"
			item = {
				ciso_state_panel_civinst_item = {
					datacontext = "[Scope]"
				}
			}
        }

