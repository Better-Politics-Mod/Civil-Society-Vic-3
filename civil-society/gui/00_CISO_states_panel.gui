				visible = "[GetVariableSystem.Exists('zoom_close_to_capital')]"

				tooltip = "ZOOM_CLOSE_TO_STATE"
				input_action = "zoom_to"
				size = { 100% 100% }
			}

		}
	}

    type ciso_state_panel_society_content = flowcontainer {
		ignoreinvisible = yes
		direction = vertical
		using = default_list_position
		spacing = 10
        margin_top = 10


		default_header_2texts = {
			visible = no
			blockoverride "text1" {
				text = "BUILDINGS"
			}
		}
        widget = {
            size = { @panel_width 50 }
            tooltip = "TOOLTIP_STATE_POPULATION"
            onmousehierarchyenter = "[SetTempMapModeByKey('mm_population')]"
            onmousehierarchyleave = "[RemoveTempMapMode]"
            alwaystransparent = no

            background = {
                using = entry_bg_simple
            }

            hbox = {
                margin = { 15 0 }
                spacing = 10

                icon = {
                    texture = "gfx/interface/icons/harvest_condition_icons/torrential_rains.dds"
                    size = { 40 40 }
                }

                textbox = {
                    layoutpolicy_horizontal = expanding
                    layoutpolicy_vertical = expanding
                    text = "CISO_SOCIETY_SOCIAL_ATMOSPHERE"
                    using = fontsize_xl
                    align = left|nobaseline
                }

                textbox = {
                    layoutpolicy_horizontal = expanding
                    layoutpolicy_vertical = expanding
                    text = "#N Tense#!"
                    align = right|nobaseline
                }
            }
        }
		default_header = {
			blockoverride "text" {
				text = "CISO_SOCIETY_CIVINSTS"
			}
		}

